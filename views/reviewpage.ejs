<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title>Trip Review</title>
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <script src="https://cdn.tailwindcss.com"></script>
</head>
<body class="bg-gray-100 text-gray-800">

  <div class="max-w-4xl mx-auto p-6 sm:p-10">
    <div class="bg-white rounded-2xl shadow-lg p-8 sm:p-12">
      <h1 class="text-4xl font-extrabold text-center text-gray-900 mb-10">Trip Summary</h1>

      <!-- Trip Details -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Trip Details</h2>
        <div class="space-y-2 text-gray-700">
          <p><strong>Type:</strong> <%= trip.tripType %></p>
          <p><strong>Pickup Location:</strong> <%= trip.pickupLocation %></p>
          <p><strong>Destination:</strong> <%= trip.destinationLocation %></p>
          <p><strong>Number of People:</strong> <%= trip.numberOfPeople %></p>
        </div>
      </section>

      <!-- Going Stops -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Going Stops</h2>
        <% if (goingStops.length > 0) { %>
          <ul class="list-disc list-inside space-y-2 text-gray-700">
            <% goingStops.forEach(stop => { %>
              <li><span class="font-medium text-gray-900"><%= stop.location %></span> - <%= stop.duration %> mins</li>
            <% }) %>
          </ul>
        <% } else { %>
          <p class="text-gray-500">No extra stops added.</p>
        <% } %>

        <% if (trip.tripType === 'return') { %>
          <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mt-8 mb-4">Return Stops</h2>
          <% if (returnStops.length > 0) { %>
            <ul class="list-disc list-inside space-y-2 text-gray-700">
              <% returnStops.forEach(stop => { %>
                <li><span class="font-medium text-gray-900"><%= stop.location %></span> - <%= stop.duration %> mins</li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-gray-500">No extra stops added.</p>
          <% } %>
        <% } %>
      </section>

      <!-- Trip Timing -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">Trip Timing</h2>
        <div class="space-y-2 text-gray-700">
          <p><strong>Departure:</strong> <%= timing.departureDate %> at <%= timing.departureTime %></p>
          <% if (trip.tripType === 'return') { %>
            <p><strong>Return:</strong> <%= timing.returnDate %> at <%= timing.returnTime %></p>
          <% } %>
        </div>
      </section>

      <!-- User Details -->
      <section class="mb-8">
        <h2 class="text-2xl font-semibold text-gray-800 border-b-2 border-gray-200 pb-2 mb-4">User Details</h2>
        <div class="space-y-2 text-gray-700">
          <p><strong>Name:</strong> <%= user.fullName %></p>
          <p><strong>Phone Number:</strong> <%= user.phoneNumber %></p>
          <p><strong>Email:</strong> <%= user.email %></p>
          <p><strong>Additional Info:</strong> <%= user.additionalInfo || 'N/A' %></p>
          <p><strong>Confirmed Details:</strong> <%= user.confirmedDetails ? "Yes" : "No" %></p>
          <p><strong>Privacy Policy Agreed:</strong> <%= user.agreedToPrivacyPolicy ? "Yes" : "No" %></p>
        </div>
      </section>

      <!-- Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mt-6">
        <button onclick="window.print()" class="px-6 py-3 bg-gray-800 text-white rounded-lg font-semibold hover:bg-gray-900 transition">
          Print This Page
        </button>
        <a href="/" class="px-6 py-3 text-gray-800 border border-gray-800 rounded-lg font-semibold text-center hover:bg-gray-100 transition">
          Back to First Page
        </a>
      </div>
    </div>
  </div>
</body>
</html>
