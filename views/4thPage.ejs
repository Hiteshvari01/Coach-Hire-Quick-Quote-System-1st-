             <!-- Form -->
          <form onsubmit="return showSuccess(event)" action="/sendQuoteRequest" method="POST" class="p-3 form-wrapper needs-validation" novalidate>
  <input type="hidden" name="tripId" value="<%= tripId %>">
  <input type="hidden" name="tripType" value="<%= tripType %>">

  <h5 class="text-lg font-semibold text-gray-700 mb-4">Now, tell us about yourself</h5>

  <!-- Full Name -->
  <div class="col-md-12 mb-4">
    <label for="username" class="block text-sm font-medium text-black-900 mb-1">Your full name</label>
    <input class="inputs form-control" type="text" id="username" name="fullName" placeholder="Seamus O'Connell MacCarthy" required />
    <div class="valid-feedback">Looks good!</div>
    <div class="invalid-feedback">Please enter your full name.</div>
  </div>

  <!-- Phone Number -->
  <div class="col-md-8 mb-4">
    <label for="phoneNumber" class="block text-sm font-medium text-black-900 mb-1">Phone number</label>
    <input class="inputs form-control" name="phoneNumber" type="tel" id="phoneNumber" placeholder="9876543210"  required />
    <div class="valid-feedback">Phone number looks valid!</div>
    <div class="invalid-feedback">Please enter your phone number.</div>
  </div>

  <!-- Email -->
  <div class="col-md-12 mb-4">
    <label for="email" class="block text-sm font-medium text-black-900 mb-1">Email</label>
    <input class="inputs form-control" type="email" name="email" id="email" placeholder="you@example.com" required />
    <div class="invalid-feedback">Please enter a valid email address.</div>
    <div class="valid-feedback">Perfect! Email looks fine.</div>
  </div>

   

  <!-- Additional Info (Optional) -->
  <div class="col-md-12 mb-4">
    <label for="info" class="block text-sm font-medium text-black-900 mb-1">
      Additional information or requests? <span class="text-gray-400 text-xs">(OPTIONAL)</span>
    </label>
    <textarea class="inputs form-control" name="additionalInfo" id="info" cols="10" rows="3"></textarea>
  </div>

  <!-- Confirm Details Checkbox -->
  <div class="form-check mb-3">
    <input class="form-check-input" name="confirmedDetails" value="on" type="checkbox" id="flexCheckDefault" required />
    <label class="form-check-label text-sm text-gray-700" for="flexCheckDefault">
      I confirm that the above information is correct. I'm aware that any changes to the trip will affect its price.
    </label>
    <div class="valid-feedback">Thank you for confirming.</div>
    <div class="invalid-feedback">You must confirm your details.</div>
  </div>

  <!-- Privacy Policy Checkbox -->
  <div class="form-check mb-6">
    <input class="form-check-input" name="agreedToPrivacyPolicy" value="on" type="checkbox" id="privacyPolicyAgreement" required />
    <label class="form-check-label text-sm text-gray-700" for="privacyPolicyAgreement">
      I agree to the processing of my personal data in accordance with the <a href="#" class="text-blue-600 hover:underline">Privacy policy</a>.
    </label>
    <div class="valid-feedback">Thank you for accepting our policy.</div>
    <div class="invalid-feedback">You must agree to the privacy policy.</div>
  </div>

  <hr class="my-6" />

  <!-- Continue Button -->
  <button type="submit" class="mb-2 bg-green-600 hover:bg-green-700 text-white rounded-full shadow-lg py-3 w-full max-w-[260px] mx-auto block text-base font-medium">
    Submit Quote Request <i class="fa-regular fa-paper-plane"></i>
  </button>
</form>

        </div>
      </div>
    </div>

    <!-- Section Title -->
    <h1 class="text-white text-center font-black py-16 text-2xl md:text-4xl lg:text-6xl">What We Do</h1>
  </div>

  <script src="/js/4index.js"></script>

<script>
  var input = document.querySelector("#phoneNumber");
  var iti = window.intlTelInput(input, {
    initialCountry: "ie",   // default Ireland
    separateDialCode: true, // dial code alag dikhega
    preferredCountries: ["ie", "us", "in"],
    utilsScript: "https://cdnjs.cloudflare.com/ajax/libs/intl-tel-input/17.0.19/js/utils.js" // number validation ke liye zaruri hai
  });

  // Custom error message
  var errorMsg = document.createElement("div");
  errorMsg.className = "invalid-feedback"; // Bootstrap ke saath sync me
  errorMsg.innerText = "Please enter a valid phone number.";
  input.parentNode.appendChild(errorMsg);

  // Form submit par check karega
  document.querySelector("form").addEventListener("submit", function (e) {
    if (!iti.isValidNumber()) {
      e.preventDefault(); // form rok do
      input.classList.add("is-invalid"); // red border
      errorMsg.style.display = "block"; // error dikhao
    } else {
      input.classList.remove("is-invalid");
      input.classList.add("is-valid");

      // full number set karo (dial code + number)
      input.value = iti.getNumber();
    }
  });

  // Typing par error hatao
  input.addEventListener("input", function () {
    input.classList.remove("is-invalid");
    errorMsg.style.display = "none";
  });
</script>

</body>
</html>



